<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jeeranut.testsqlite.ResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/etxtPartNo"
            android:layout_alignParentStart="true">

            <TableLayout
                android:id="@+id/tblResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:shrinkColumns="*"
                    android:stretchColumns="*">

                    <TextView
                        android:id="@+id/txtvNo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:text="No" />

                    <TextView
                        android:id="@+id/txtvName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:text="Name" />

                    <TextView
                        android:id="@+id/txtvSurname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:text="Surname" />

                    <TextView
                        android:id="@+id/txtMarks"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:text="Marks" />

                </TableRow>

            </TableLayout>
        </ScrollView>
    </LinearLayout>

    <EditText
        android:id="@+id/etxtPartNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:inputType="textPersonName" />


</RelativeLayout>